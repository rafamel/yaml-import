{
  "name": "yaml-import",
  "version": "0.2.3",
  "author": "Rafa Mel",
  "description": "Import files and directories in YAML for a modular design",
  "homepage": "https://github.com/rafamel/yaml-import",
  "main": "./lib/index",
  "bin": {
    "yimp": "bin/yimp.js"
  },
  "scripts": {
    "lint": "eslint ./lib --ext .js && eslint ./bin --ext .js",
    "lint:test": "eslint ./test --ext .js",
    "lint:md": "markdownlint *.md --config markdown.json",
    "test": "npm run lint:test && jest ./test/.*.test.js --runInBand --verbose",
    "watch": "nodemon ./node_modules/.bin/run-s lint test",
    "checks": "run-s lint lint:* && jest ./test/.*.test.js",
    "prepublishOnly": "npm run checks",
    "update:packages": "rm -rf node_modules && rm package-lock.json && npm update --save/save-dev && npm install && npm outdated"
  },
  "contributors": [
    {
      "name": "Rafa Mel"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rafamel/yaml-import"
  },
  "license": "MIT",
  "keywords": [
    "yaml",
    "include",
    "import",
    "require",
    "js-yaml"
  ],
  "bugs": {
    "url": "https://github.com/rafamel/yaml-import/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/rafamel/yaml-import/raw/master/LICENSE"
    }
  ],
  "dependencies": {
    "fs-readdir-recursive": "^1.0.0",
    "js-yaml": "^3.10.0",
    "namify": "^0.1.3",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest-cli": "^22.0.4",
    "markdownlint-cli": "^0.6.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
